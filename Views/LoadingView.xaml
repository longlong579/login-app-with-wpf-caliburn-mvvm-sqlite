        <Image gif:ImageBehavior.AnimatedSource="../Media/asd.gif"  Margin="0 200 0 10" Height="125"/>
        <TextBlock HorizontalAlignment="Center" Text="Searching..." FontSize="15"  FontWeight="Light"/>
